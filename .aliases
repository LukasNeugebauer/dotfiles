# general linux stuff
alias ls="ls -h --color=auto"
alias l="ls -la"
alias grep="grep --color=auto"
alias rm="rm -I"
alias cp="cp -r"

# mount hard drive for user
alias usermount="sudo mount -o uid=$(id -u $USER),gid=$(id -g $USER)"
alias diffy="diff -y --color=auto"
alias history="history 0"
alias df="df -h"
alias schlaf="sudo systemctl suspend"

# quick ones for the libreoffice packages
alias calc="libreoffice --calc"
alias writer="libreoffice --writer"
alias impress="libreoffice --calc"
alias draw="libreoffice --draw"

# git aliases
alias ga="git add"
alias gc="git commit -m"
alias gd="git diff"
alias gis="git status" # gs is taken because of ghostscript

# matlab
alias mls="/usr/bin/matlab -nodesktop -nosplash"

# wttr.in doesn't find my location
alias wetter="curl wttr.in/Hamburg"

# bad matlab habit
alias clc=clear

# lol
alias please='sudo $(fc -ln -1)'

#black without writing and with color
alias bd="black --diff --color"

# 3 letters are clearly too many to type out
alias v=vim

# create large monitor from 2
alias dualmonitor="xrandr --setmonitor dualmonitor auto DP-0,HDMI-0"
