height = 27
offset-x = 1%
offset-y = 1%
; how much rounding to do
radios = 0.0
; background and foreground colors
foreground = ${colors.foreground}
background = ${colors.background-alt}

; general appearance
line-size = 3
line-color = ${colors.yellow}
border-size = 4
border-color = #00000000
padding = 2
module-margin = 2

; fonts to get all the emoji bullshit going
font-0 = Source Code Pro for Powerline:size=9
font-1 = fixed:pixelsize=10;1
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0
font-3 = siji:pixelsize=10;1
font-4 = NotoColorEmoji:scale=10
font-5 = ProFont for Powerline:size=9


; modules added to the bar
modules-left = i3
modules-center = xwindow
