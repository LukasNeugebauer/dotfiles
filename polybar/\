background-alt = #665c54
foreground-alt = #689d6a
;yellow
primary = #d79921
; aqua
secondary = #689d6a

[bar/laptop]
[bar/work]
monitor = ${env:MONITOR:eDP1}
monitor-fallback = HDMI-1
; bar on top, not bottom
bottom = false
; have center block in the middle whenever possible
fixed-center = true
; position and size
width = 100%
height = 27
offset-x = 1%
offset-y = 1%
; how much rounding to do
radios = 0.0
; background and foreground colors
foreground = ${colors.foreground}
background = ${colors.background-alt}

; general appearance
line-size = 3
line-color = ${colors.yellow}
border-size = 4
border-color = #00000000
padding = 2
module-margin = 2

; fonts to get all the emoji bullshit going
font-0 = Source Code Pro for Powerline:size=9
font-1 = fixed:pixelsize=10;1
font-2 = unifont:fontformat=truetype:size=8:antialias=false;0
font-3 = siji:pixelsize=10;1
font-4 = NotoColorEmoji:scale=10
font-5 = ProFont for Powerline:size=9


; modules added to the bar
modules-left = i3
modules-center = xwindow
modules-right = filesystem pulseaudio xkeyboard memory cpu eth temperature date powermenu

separator = |
wm_name = i3

locale = en_US.UTF-8

;tray-position = center
;tray-detached = false
;tray-background = ${colors.yellow}

;i3 specific suff
wm-restack = i3
;override-redirect = true
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize



[bar/work]
;DP-1 is the single monitor at work
monitor = ${env:MONITOR:DP-1}
monitor-fallback = HDMI-1
; bar on top, not bottom
bottom = false
; have center block in the middle whenever possible
fixed-center = true
; position and size
