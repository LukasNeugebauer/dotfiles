#start of bar section for i3bar
bar {
    status_command /usr/bin/bumblebee-status \
        -m spotify pomodoro cpu memory disk battery pasource pasink weather datetime \
        -p cpu.format="{:.0f}%" \
           memory.format="{used}/{total}" \
           disk.format="{percent:.1f}%" \
           spotify.format="{title}" \
           datetime.format="%a %d.%m. %H:%Mh" \
           weather.showcity=false \
           cpu.left-click="alacritty --title pleasefloat -e htop" \
           memory.left-click="alacritty --title pleasefloat -e htop" \
           cpu.theme.align="center" \
           weather.left-click="gnome-weather" \
        -t my-gruvbox

    position top
#    status_command i3status
    font pango:Source Code Pro 9
    colors {
        # bar background color
        background $bg
        # text color used for blocks that do not have a color specified.
        statusline $yellow
        # workspaces section
        #                    border  backgr. text
        focused_workspace    $yellow $yellow $darkgray
        inactive_workspace   $darkgray $darkgray $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red $red $bg
    }
}

